<div class="row justify-content-md-center">
  <div class="col-6">
    <div class="text-center mt-40">
      <h1>
        Checkout â€” Stripe Press
      </h1>
      <h5 class="text-secondary" id="item_title">
        {{title}}
      </h5>
      <hr class="mt-40">
      <div class="mt-20 text-info">
        Total due: $<span class="amount" data-amount="{{amount}}"></span>
      </div>
    </div>
    <div class="card box-shadow mt-40">
      <div class="card-body">
        <form id="payment-form">
          <div>
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="you@email.com" required>
          </div>
          <div class="mt-20 text-center text-secondary border-placeholder">
            <div id="card-element"></div>
          </div>
          <p id="card-errors" role="alert"></p>
          <div class="mt-20">
            <button class="btn btn-lg btn-block btn-primary" id="pay_amount_btn">Pay $
              {{!-- To Do: add spinner here which shows that the payment is processing --}}
              <span class="amount" data-amount="{{amount}}"></span>
            </button>
          </div>
        </form>
        <p id="charge-id" role="alert"></p>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/js/client.js"></script>